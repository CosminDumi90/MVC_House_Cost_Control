@model IEnumerable<ExpenseType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-info">Create new Expense Type</a>
            <a asp-controller="Expense" asp-action="Index" class="btn btn-info">Expenses</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Expense
                    </th>
                
                    <th class="text-center">
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenseType in Model)
                {
                    <tr>
                        <td width="50%" class="text-center">@expenseType.Name</td>
                  
                        <td width="50%" class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expenseType.Id" class="btn btn-secondary mx-1">Update</a>
                                <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expenseType.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
     
        </table>
    }
    else
    {
        <p>No items created yet</p>
        
    }

</div>
