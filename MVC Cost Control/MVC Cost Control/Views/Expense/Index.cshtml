@model IEnumerable<Expense>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-info">Create new Expense</a>
            <a asp-controller="ExpenseType" asp-action="Index" class="btn btn-info">Expense Types</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Expense
                    </th>
                    <th class="text-center">
                        Amount
                    </th>
                    <th class="text-center">
                        Expense Type
                    </th>
                    <th class="text-center">
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="25%" class="text-center">@expense.ExpenseName</td>
                        <td width="25%" class="text-center">@expense.Amount</td>
                        <td width="25%" class="text-center">@expense.ExpenseType.Name</td>
                        <td width="25%" class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-secondary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <p class="text-dark lead font-weight-bold">Total expenses: @Model.Sum(x => x.Amount) Ron</p>
    }
    else
    {
        <p>No items created yet</p>

    }


</div>
